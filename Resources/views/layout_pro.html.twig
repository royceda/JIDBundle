        <script src="{{ asset('bundles/ariicore/dhtmlx/dhtmlxLayout/codebase/dhtmlxlayout.js') }}" type="text/javascript" charset="utf-8"></script>
        <script src="{{ asset('bundles/ariicore/dhtmlx/dhtmlxChart/codebase/dhtmlxchart.js') }}" type="text/javascript" charset="utf-8"></script>
	<link media="screen" rel="stylesheet" type="text/css" href="{{ asset('bundles/ariicore/dhtmlx/dhtmlxChart/codebase/dhtmlxchart.css') }}"  />
